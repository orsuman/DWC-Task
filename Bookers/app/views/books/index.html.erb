<header>
 Books
</header>

<main class="index">
<table class="table">
<tr style="font-size: 13px;"><th>Title</th><th>Body</th></tr>
<% @books.each do |book| %>
<tr align="left", style="font-size: 14px; "><td><%= book.title %></td><td><%= book.body %></td><td><%= link_to "Show", book_path(book) %></td><td><%=link_to "Edit",edit_book_path(book.id) %></td><td><%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sure?" %></td></tr>
<% end %>
</table>

   <div class="new">
    <h2>New book</h2><br>
    <%= form_for(@book) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

     Title<br>
     <%= f.text_field :title %>
     <br><br>

     Body<br>
     <%= f.text_area :body ,:size=>"30x3" %>
     <br><br>

     <%= f.submit 'Create Book' %>

    <% end %>
   </div>
 </main>