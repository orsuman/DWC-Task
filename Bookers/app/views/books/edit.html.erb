<main class="edit">
<h1>Editing Book</h1><br>

<%= form_for(@book) do |f| %>
    Title<br>
    <%= f.text_field :title %><br><br>
    Body<br>
    <%= f.text_area :body,:size=>"30x3" %><br><br>
    <%= f.submit 'Update Book' %>
<% end %>
</main>
<div class="link">
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", root_path %>
</div>
