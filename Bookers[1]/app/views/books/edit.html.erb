<main class="edit">
<h1>Editing Book</h1><br>

<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
     <div class ="error">
      <div id="error_explanation">
      <h3>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this book from being saved:
      </h3>
      <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
     </div></div>
     <% end %>

    Title<br>
    <%= f.text_field :title %><br><br>
    Body<br>
    <%= f.text_area :body,:size=>"30x3" %><br><br>
    <%= f.submit 'Update Book' %>
<% end %>
</main>
<div class="link">
<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
