<div class="container">
  <div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
     <div class ="error"><div id="error_explanation">
      <h3>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this book from being saved:
      </h3>
      <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
     </div></div>
     <% end %>

    <h5>Title</h5>
    <%= f.text_field :title, class:"col-lg-12" %><br>
    <h5>Body</h5>
    <%= f.text_area :body, class:"col-lg-12" %><br>&nbsp;

    <% if @book.user.id == current_user.id %>
         <button type="submit" class="btn btn-primary col-lg-12">Update Book</button>
<% end %>
<% end %>
   <br>
<%= link_to book_path do %>Show<% end %> | <%= link_to books_path do %>Back<% end %>
</div>

  <div class="col-lg-3"></div>

  </div>
 </div>
</div>