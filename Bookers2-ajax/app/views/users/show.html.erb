<div class="container">
 <div class="row">

   <div class="col-xs-3">
     <%= render 'books/new', book: @bookn, user: @user %>
   </div>

   <div class="col-xs-9">
       <h2>Books　(All <%= @user.books.count %> Posts)</h2>
            <table ~~~ class="table">
               <colgroup>
                 <col style="width:10%;">
                 <col style="width:20%;">
                 <col style="width:45%;">
                 <col style="width:10%;">
                 <col style="width:15%;">
               </colgroup>
              <tr><th></th><th>Title</th><th>Opinion</th><th></th><th></th></tr>
              <% @books.each do |book| %>
                 <tr align="left"><td><%= attachment_image_tag book.user, :profile_image, :fill, 45, 45, fallback: "no_image.jpg",size:'45x45' %></td><td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td><td><%= book.body %></td><td><div align="center"><%= render 'favorites/favorite', book: book %></div></td><td>コメント数：<%= book.book_comments.count %></td>
              <% end %>
            </table>
   </div>

 </div>
</div>