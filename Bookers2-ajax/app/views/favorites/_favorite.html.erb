<span id="favorite-<%= book.id %>" >
    <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fa fa-heart good" aria-hidden="true" style="color: red;">
    <%= book.favorites.count %><span class="goodine" >いいね！</span></i><% end %>
  <% else %>
    <%= link_to book_favorites_path(book), method: :post, remote:true do %>
    <i class="fa fa-heart-o good" aria-hidden="true" style="color: black;">
    <%= book.favorites.count %><span class="goodine">いいね！</span></i><% end %>
  <% end %>
</span>