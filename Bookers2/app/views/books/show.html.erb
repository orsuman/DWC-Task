<div class ="container">
 <div class="row">

   <div class="col-xs-3">
    <%= render 'books/new', book: @bookn, user: @book.user %>
   </div>

   <div class="col-xs-9">
    <h2>Book detail</h2>

            <table class="table">
              <tr align="left">
                <td><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100,fallback: "no_image.jpg",size:'100x100' %><br><%=@book.user.name %><% end %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                  <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success btn-xs" %></td>
                <td><%= link_to "Destroy", @book, method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-danger btn-xs" %></td>
                  <% end %>
              </tr>
            </table>
    </div>

 </div>
</div>